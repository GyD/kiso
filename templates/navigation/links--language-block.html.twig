{#
/**
 * @file
 * Default Kiso's theme implementation to display the "Language switcher" set of links.
 *
 * You will find same variables as in the core 'links.html.twig' template.
 *
 * Related WCAG resources:
 * - SC 1.3.1 Info and Relationships (Level A):
 *   - H48: Using ol, ul and dl for lists or groups of links.
 *   - H49: Using semantic markup to mark emphasized or special text.
 * - SC 3.1.4 Abbreviations (Level AAA):
 *   - H28: Providing definitions for abbreviations by using the abbr element.
 *
 * @see template_preprocess_links()
 * @see kiso_preprocess_links__language_block()
 */
#}
{{ attach_library('kiso/links--language-block') }}
{% if links -%}
  <ul{{ attributes.addClass('links--language-block') }}>
    {%- for item in links -%}
      <li{{ item.attributes.removeAttribute('hreflang') }}>
        {%- if item.link -%}
          {{ item.link }}
        {%- elseif item.text_attributes -%}
          <del{{ item.text_attributes }}>
            <abbr aria-hidden="true" title="{{ item.title }}">{{ item.text }}</abbr>
          </del>
        {%- else -%}
          {{ item.text }}
        {%- endif -%}
      </li>
    {%- endfor -%}
  </ul>
{%- endif %}
