{#
/**
 * @file
 * Kiso's theme override to display a taxonomy term.
 *
 * You will find same variables as in the core 'taxonomy-term.html.twig' template.
 *
 * @see template_preprocess_taxonomy_term()
 */
#}
{%
  set classes = [
    'taxonomy-term',
    'taxonomy-term--vocabulary-' ~ term.bundle|clean_class,
    'taxonomy-term--view-mode-' ~ view_mode|clean_class,
  ]
%}
<div{{ attributes.setAttribute('id', 'taxonomy-term-' ~ term.id).addClass(classes) }}>
  {{ title_prefix }}
  {% if not page %}
    <h2{{ title_attributes.addClass('taxonomy-term__title') }}><a href="{{ url }}">{{ name }}</a></h2>
  {% endif %}
  {{ title_suffix }}

  <div{{ content_attributes.addClass('taxonomy-term__content') }}>
    {{ content }}
  </div>
</div>
